<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 mt-5">
      <p>ジャンル検索欄仮aa</p>
      <!--%= render ジャンル検索 %-->
    </div>
    <div class="col-md-8 offset-md-1 mt-5">
      <h4>商品一覧</h4>
      商品の一覧を表示
        <% @items.each do |item| %>
      <div class="d-flex mt-2">
        <%=link_to item_path(item) do %>
          <%= image_tag @item.get_image, size:"100x100" %>
        <% end %><br>
        <strong class><%= item.name %></strong><br>
        <span class=><%= item.price %>円</span><br>
        <% end %>
      </div>
    </div>
  </div>
</div>
