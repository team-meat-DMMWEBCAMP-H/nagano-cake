<div class='container'>
  <div class'row'>
    <div class= "col-lg-1"></div>
    <div class= "col-lg-3">
      <h3 class= "bg-light text-center">会員情報編集</h3>
    </div>
  </div>
  <div class="row">
    <div class= "col-lg-1"></div>
    <div class= "col-lg-11">
      <%= form_with model: @customer,url:customers_my_page_path,method: :patch do |f| %>
      <table class= "table-borderless">
        <tr>
          <td>氏名</td>
          <td>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %>
              <%= f.text_field :first_name_kana %>
          </td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :zip_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address,size: 60 %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td>
            <%= f.text_field :email %>
          </td>
        </tr>

        <tr>
          <td></td>
          <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
      <a class="btn btn-danger text-center" href="/customers/check" role="button">退会する</a>
    </div>
  </div>
</div>