<div class= "container">
  <h2>配送先登録 / 一覧</h2>
  <div class="row">
    <%= form_with model: @shipping_address, url: shipping_addresses_path, method: :post do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :zip_code, placeholder: "0000000" %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, size: 60, placeholder: "東京渋谷区代々木神園町0-0" %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name, placeholder: "令和道子" %></td>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </table>
    <% end %>
  </div>

  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @shipping_addresses.each do |shipping_address| %>
        <tr>
          <td><%= shipping_address.zip_code %></td>
          <td><%= shipping_address.address %></td>
          <td><%= shipping_address.name %></td>
          <td>
            <%= link_to "編集する",edit_shipping_address_path(shipping_address),  class: "btn btn-sm btn-success" %>
            <%= link_to "削除する",shipping_address_path(shipping_address), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="mx-auto"><%= paginate @shipping_addresses %></div>
  </div>
</div>