<div class= "container">
  <div class= "row">
    <h3 class="bg-light text-center">会員一覧</h3>
    <table class= "table table-hover table-inverse">
      <thead class="bg-light">
        <tr>
          <th>会員id</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.last_name+customer.first_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <% if customer.is_active == true %>
            <td class="text-success">有効</td>
          <% else %>
            <td class="text-secondary">退会</td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <%= paginate @customers %>
  
</div>
