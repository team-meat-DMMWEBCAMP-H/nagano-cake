<div class= "container">
  <h2>配送先編集</h2>

  <div class= "row">
    <%= form_with model: @shipping_address, url: customers_shipping_addresses_path, local: true, class: 'form-inline' do |f| %>

    <div class= "shipping_address col-xs-10">
      <div class= "form-group col-xs-12">
        <%= f.label :"郵便番号(ハイフンなし)", :placeholder => "0000000", class: "col-xs-3 control-label" %>
        <%= f.text_field :zip_code , class: "col-xs-2 form-control-static zip_code" %>
      </div>

      <div class= "form-group col-xs-12">
        <%= f.label :"住所" ,class: "col-xs-3 control-label" %>
        <%= f.text_field :address, :placeholder => "東京都渋谷区代々木区神園町0-0", class: "col-xs-9 form-control-static address" %>
      </div>

      <div class= "form-group col-xs-12">
        <%= f.label :"宛名", :placeholder => "令和道子", class: "col-xs-4 form-control-static name" %>
      </div>
      <%= f.submit '変更内容を保存', class: 'btn btn-success col-sm-2' %>
    </div>
    <% end %>
  </div>
</div>