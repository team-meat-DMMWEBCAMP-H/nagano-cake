<div class='container'>
  <div class='row py-2'>
    <div class="col-10 offset-2">
      <h4>注文情報入力</h4>
    </div>
  </div>
  <div class='row'>
    <div class='col'>
      <%= form_with model: @order, url: "/orders/confirm", method: :post, local: true do |f| %>
        <h5 class='font-weight-bold'>支払方法</h5>
        <!--font-weight-boldは「太字」のクラス-->
        <p>
        <%=  f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
        <%= f.label :payment_method,"クレジットカード" %>
        <br>
        <%= f.radio_button :payment_method, :銀行振込 %>
        <%= f.label :payment_method, "銀行振込" %>
        </p>
        
        <h5 class="font-weight-bold">お届け先</h5>
        
          <%= f.radio_button :address_option,0,checked: "checked" %>
          <%= f.label :order_address,"ご自身の住所" %>
        <br>
          〒<%= current_customer.post_code %>
          <%= current_customer.address %><br>
          <%= current_customer.last_name %>
          <%= current_customer.first_name %>
        <br>  
    </div>
  </div>
</div>