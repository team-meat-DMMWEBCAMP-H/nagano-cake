<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="col-md-6">
      <h2 class="bg-light">新商品登録</h2>
    </div>
    <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto'>
      <%= form_with model: @item, url: admin_items_path, method: :post  do |f| %>
        <div class="form-group">
          <%= f.label '商品画像' %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label '商品名' %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label '商品説明' %>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= f.label 'ジャンル' %>
          　ジャンル選択
        </div>
        <div class="form-group">
          <%= f.label '税抜価格' %>
          <%= f.text_field :price %>
        </div>
        <div class="form-group">
          <%= f.label '販売中' %>
          <%= f.radio_button :sale_status, true %>
          <%= f.label '販売停止中' %>
          <%= f.radio_button :sale_status, false %>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
