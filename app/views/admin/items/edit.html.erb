<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="col-md-6">
      <h2 class="bg-light">商品編集</h2>
      <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label '商品画像', class: "col-sm-3" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label '商品名', class: "col-sm-3" %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label '商品説明', class: "col-sm-3" %>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= f.label 'ジャンル', class: "col-sm-3" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "col-sm-3 form-control border-dark" %>
        </div>
        <div class="form-group">
          <%= f.label '税抜価格', class: "col-sm-3" %>
          <%= f.text_field :price %>
        </div>
        <div class="form-group">
          <%= f.label '販売中' %>
          <%= f.radio_button :sale_status, true %>
          <%= f.label '販売停止中' %>
          <%= f.radio_button :sale_status, false %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>