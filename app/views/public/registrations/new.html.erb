<div class= "container">
  <div class="row">
    <div class="col-md-4">
      <h1 class="bg-light">新規会員登録</h1>
    </div>
    <div class="col-md-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :"名前", class: "col-sm-2" %>
        <%= f.label :"(姓)",class: "col-sm-2" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-sm-2" %>
        <%= f.label :"(名)",class: "col-sm-2" %>
        <%= f.text_field :first_name, autofocus: true, class: "col-sm-2" %>
      </div>

      <div class="field">
        <%= f.label :"フリガナ", class: "col-sm-2" %>
        <%= f.label :"(セイ)",class: "col-sm-2" %>
        <%= f.text_field :last_name_kana, autofocus: true, class: "col-sm-2" %>
        <%= f.label :"(メイ)",class: "col-sm-2" %>
        <%= f.text_field :first_name_kana, autofocus: true, class: "col-sm-2" %>
      </div>

      <div class="field">
        <%= f.label :"メールアドレス",class: "col-sm-4" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div>
        <%= f.label :"郵便番(ハイフンなし)",class: "col-sm-4" %>
        <%= f.text_field :zip_code, autofocus: true, class: "col-sm-2" %>
      </div>

      <div>
        <%= f.label :"住所",class: "col-sm-4" %>
        <%= f.text_field :address, autofocus: true, class: "col-sm-7" %>
      </div>

      <div>
        <%= f.label :"電話番号(ハイフンなし)",class: "col-sm-4" %>
        <%= f.text_field :phone_number, autofocus: true, class: "col-sm-2" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(6文字以上)", class: "col-sm-4 control-label" %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード（確認用）",class: "col-sm-4" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions text-center">
        <%= f.submit "新規会員登録",class: "btn btn-success" %>
      </div>
     <% end %>
     <div class="col-md-5">
      <h4 class="bg-light">すでに登録済みの方</h4>
    </div>
     <div class="form-inline">
       <%= render "public/shared/links" %>からログインしてください。
     </div>
   </div>
  </div>
</div>

