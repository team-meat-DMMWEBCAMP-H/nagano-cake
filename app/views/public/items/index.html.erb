<div class="container">
  <div class="row">
    <div class="col-md-2 mt-5">

    </div>
    <div class="col-md-10 mt-3">
    <div class="d-flex">
      <h4>商品一覧</h4>
      <p class="mt-1">(全<%= @item.count %>件)</p>
    </div>
        <div class="card-deck">
          <% @items.each do |item| %>
          <div class="col-md-3">
            <div class="card mt-2">
              <%=link_to item_path(item) do %>
                <%= image_tag item.get_image, size:"175x150" %>
              <% end %>
            <div class="card-body">
              <h6 class="card-title"><%= item.name %></h6>
              <p class="card-text">¥<%= item.price %>円</p>
            </div>
          </div>
        </div>
          <% end %>
    </div>
</div>
      <div class="col-md-12 d-flex justify-content-center">
        <%= paginate @items %>
</div>
  </div>
</div>

